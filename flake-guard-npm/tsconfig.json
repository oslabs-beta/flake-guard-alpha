{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "target": "ES6"
  },
  "include": ["src/**/*"]
}